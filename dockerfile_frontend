# Ã‰tape de build
FROM node:latest AS build

WORKDIR /frontend

COPY package.json ./
COPY package-lock.json ./

RUN npm install

COPY . .

RUN npm run build

# Utiliser une image Nginx pour servir le contenu
FROM nginx:alpine

COPY ./nginx/nginx.conf /etc/nginx/conf.d/default.conf

COPY --from=build /frontend /usr/share/nginx/html

EXPOSE 80

CMD ["npm", "run", "serve"]




